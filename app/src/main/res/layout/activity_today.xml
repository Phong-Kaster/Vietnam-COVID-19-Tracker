<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".TodayActivity">

    <!-- VIETNAM -->
    <TextView
        android:layout_gravity="center"
        android:textSize="24sp"
        android:textStyle="bold"
        android:text="Vietnam"
        android:textColor="#E42D2D"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Space
        android:layout_width="wrap_content"
        android:layout_height="10sp"
        tools:ignore="SmallSp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/todayInternalDeathTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20sp"
            android:text="Deaths: "
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/todayInternalDeath"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/todayInternalDeathTitle"
            android:layout_marginStart="103dp"
            android:text="20400"
            android:textSize="18sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <Space
        android:layout_width="wrap_content"
        android:layout_height="10sp"
        tools:ignore="SmallSp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/todayInternalTreatingTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20sp"
            android:text="Treatings: "
            android:textStyle="bold"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/todayInternalTreating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/todayInternalTreatingTitle"
            android:layout_alignParentTop="true"
            android:layout_marginStart="103dp"
            android:layout_marginTop="0dp"
            android:text="130"
            android:textSize="18sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <Space
        android:layout_width="wrap_content"
        android:layout_height="10sp"
        tools:ignore="SmallSp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/todayInternalCasesTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20sp"
            android:text="Cases: "
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/todayInternalCases"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/todayInternalCasesTitle"
            android:layout_alignParentTop="true"
            android:layout_marginStart="103dp"
            android:layout_marginTop="0dp"
            android:text="120"
            android:textSize="18sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <Space
        android:layout_width="wrap_content"
        android:layout_height="10sp"
        tools:ignore="SmallSp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/todayInternalRecoveredTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20sp"
            android:text="Recovered: "
            android:textStyle="bold"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/todayInternalRecovered"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/todayInternalRecoveredTitle"
            android:layout_alignParentTop="true"
            android:layout_marginStart="103dp"
            android:layout_marginTop="0dp"
            android:text="20020"
            android:textColor="#4CAF50"
            android:textSize="18sp"
            android:textStyle="bold" />
    </RelativeLayout>
    <!-- end VIETNAM -->

    <!-- WORLDWIDE -->
    <TextView
        android:layout_gravity="center"
        android:textSize="24sp"
        android:textStyle="bold"
        android:text="Worldwide"
        android:textColor="#03A9F4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Space
        android:layout_width="wrap_content"
        android:layout_height="10sp"
        tools:ignore="SmallSp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/todayWorldwideDeathTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20sp"
            android:text="Deaths: "
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/todayWorldwideDeath"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/todayWorldwideDeathTitle"
            android:layout_marginStart="103dp"
            android:text="20400"
            android:textSize="18sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <Space
        android:layout_width="wrap_content"
        android:layout_height="10sp"
        tools:ignore="SmallSp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/todayWorldwideTreatingTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20sp"
            android:text="Treatings: "
            android:textStyle="bold"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/todayWorldwideTreating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/todayWorldwideTreatingTitle"
            android:layout_alignParentTop="true"
            android:layout_marginStart="103dp"
            android:layout_marginTop="0dp"
            android:text="130"
            android:textStyle="bold"
            android:textSize="18sp" />
    </RelativeLayout>

    <Space
        android:layout_width="wrap_content"
        android:layout_height="10sp"
        tools:ignore="SmallSp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/todayWorldwideCasesTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20sp"
            android:text="Cases: "
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/todayWorldwideCases"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/todayWorldwideCasesTitle"
            android:layout_alignParentTop="true"
            android:layout_marginStart="103dp"
            android:layout_marginTop="0dp"
            android:text="120"
            android:textStyle="bold"
            android:textSize="18sp" />
    </RelativeLayout>

    <Space
        android:layout_width="wrap_content"
        android:layout_height="10sp"
        tools:ignore="SmallSp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/todayWorldwideRecoveredTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20sp"
            android:text="Recovered: "
            android:textStyle="bold"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/todayWorldwideRecovered"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/todayWorldwideRecoveredTitle"
            android:layout_alignParentTop="true"
            android:layout_marginStart="103dp"
            android:layout_marginTop="0dp"
            android:text="20020"
            android:textColor="#4CAF50"
            android:textSize="18sp"
            android:textStyle="bold" />
    </RelativeLayout>
    <!-- end WORLDWIDE -->


</LinearLayout>